<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="730dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/kojimalogo"
        />

    <ImageView
        android:id="@+id/Be_image"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/be2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="520dp"
        />

    <ImageButton
        android:id="@+id/Be_button"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="528dp"
        android:background="@null"
        android:contentDescription="Botão de entrar"
        />

    <ImageView
        android:id="@+id/bc2_image"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/bc2"
        android:layout_toEndOf="@+id/Be_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="520dp"
        />

    <ImageButton
        android:id="@+id/bc2_button"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="528dp"
        android:layout_toEndOf="@+id/Be_button"
        android:background="@null"
        android:contentDescription="Botão de cadastro"
        />

    <EditText
        android:id="@+id/cpflogin"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="89dp"
        android:layout_marginTop="393dp"
        android:padding="8dp"
        android:background="@drawable/bordaeditlogin"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="405dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/email"
        android:layout_marginRight="8dp"
        />


    <EditText
        android:id="@+id/senhalogin"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="461dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:inputType="textVisiblePassword"
        android:drawablePadding="12dp"
        android:hint="SENHA"
        android:background="@drawable/bordaeditlogin"
        />

    <ImageView
        android:id="@+id/iconeSenha"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="474dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/senha"
        android:layout_marginRight="8dp"
    />


    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Esqueci minha senha"
        android:textSize="26dp"
        android:layout_below="@id/Be_button"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="55dp"
        />

</RelativeLayout>